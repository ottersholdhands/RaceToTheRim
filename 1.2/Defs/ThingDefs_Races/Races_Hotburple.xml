				<cooldownTime>1.5</cooldownTime>
				<linkedBodyPartsGroup>FrontLeftPaw</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>14</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<label>right claw</label>
				<capacities>
					<li>Scratch</li>
				</capacities>
				<power>11</power>
				<cooldownTime>1.5</cooldownTime>
				<linkedBodyPartsGroup>FrontRightPaw</linkedBodyPartsGroup>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>14</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>
			<li>
				<capacities>
					<li>Bite</li>
				</capacities>
				<power>15</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>Teeth</linkedBodyPartsGroup>
				<chanceFactor>0.7</chanceFactor>
				<surpriseAttack>
					<extraMeleeDamages>
						<li>
							<def>Stun</def>
							<amount>24</amount>
						</li>
					</extraMeleeDamages>
				</surpriseAttack>
			</li>

			<li>
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
			</li>
		</tools>
		<comps>



			<li Class="RttRAnimalBehaviours.CompProperties_EatWeirdFood">

				<customThingToEat>					
					<li>Steel</li>
					<li>Silver</li>
					<li>Uranium</li>
					<li>Gold</li>
					<li>Plasteel</li>
					<li>ComponentIndustrial</li>		
				</customThingToEat>
				<percentageOfDestruction>0.2</percentageOfDestruction>
				<nutrition>2</nutrition>
				<affectHitPoints>false</affectHitPoints>
				<digThingIfMapEmpty>true</digThingIfMapEmpty>
